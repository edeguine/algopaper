<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.algofashion.etienne.algopaper.MainActivity">


    <TextView
        android:id="@+id/sample_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose wallpaper type"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/btn_snakecolors"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Snake" />

    <Button
        android:id="@+id/btn_pastelgradients"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Pastel" />

    <Button
        android:id="@+id/btn_spiralcolor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Spiral" />

    <Button
        android:id="@+id/btn_spiralcolorfade"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Spiral fade" />

    <Button
        android:id="@+id/btn_spiralcolorfademulti"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Spiral twist" />

</LinearLayout>
